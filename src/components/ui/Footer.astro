---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/olga_koss_logo.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const logos = [
  {
    name: "Facebook",
    src: Facebook,
    link: "https://www.facebook.com/profile.php?id=100069037357860",
  },
];

const links = [
  { name: "O mnie", href: "#about" },
  { name: "Usługi", href: "#services" },
  { name: "Przypadłości", href: "#cases" },
  { name: "Opinie", href: "#Testimonials" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-white py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <!-- <picture>
            <a href="#home">
              <Image src={Logo} alt="Logo Olga Koss - Medycyna Naturalna" />
            </a>
            
          </picture> -->
          <a href="#home">
            <!-- <Image src={brand} alt="Olga Koss Logo" class="w-[219px]" loading="eager" /> -->
            <h3 class="uppercase">Olga Koss</h3>Medycyna naturalna
          </a>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" target="_blank" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5">Kontakt:</h3>
            <div class="flex flex-col justify-between gap-4">
              <span>
                Email: <a href="mailto:olenka50k@wp.pl">olenka50k@wp.pl</a>
              </span>
              <span>
                Telefon: <a href="tel:+48886555984">+48 886 555 984</a>
              </span>
              <span class="lg:w-3/4">
                Adres: ul. Jaworowa 7 35-113 Rzeszów
              </span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-white mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >2024 Olga Koss - Made With <a
            class="underline"
            target="_blank"
            href="https://astro.build/">Astro</a
          > by <a
            href="https://github.com/dev-oskar"
            title="Website creator's github link">Oskar Pietrucha</a
          ></span
        >
      </div>
    </div>
  </div>
</section>
