---
import AccordionItem from "./AccordionItem.astro";

const content = [
  {
    index: 1,
    title: "Telefoniczne omówienie problemu",
    description:
      "Krótka rozmowa telefoniczna, podczas której pacjent przedstawia swoje dolegliwości i potrzeby, a terapeutka ocenia, czy terapia naturalna będzie odpowiednia.",
  },
  {
    index: 2,
    title: "Konsultacja wstępna",
    description:
      "Szczegółowa rozmowa w gabinecie lub online, obejmująca analizę stanu zdrowia, stylu życia oraz historii chorób. Pani Olga proponuje indywidualny plan terapii.",
  },
  {
    index: 3,
    title: "Diagnoza i badanie",
    description:
      "Diagnostyka metodami naturalnymi (np. irydologia, analiza energii), aby określić przyczynę dolegliwości i odpowiednią terapię.",
  },
  {
    index: 4,
    title: "Indywidualny plan leczenia",
    description:
      "Opracowanie spersonalizowanego programu terapii, dostosowanego do potrzeb pacjenta, który może obejmować zioła, dietę, czy techniki relaksacyjne.",
  },
  {
    index: 5,
    title: "Leczenie",
    description:
      "Rozpoczęcie terapii, która może obejmować ziołolecznictwo, inhalacje, akupunkturę, masaż, terapię dietetyczną czy inne metody naturoterapii.",
  },
  {
    index: 6,
    title: "Kontrola i dalsze zalecenia",
    description:
      "Regularne spotkania kontrolne w celu monitorowania postępów i dostosowania terapii w miarę potrzeby.",
  },
];
---

{
  content.map((item) => {
    return (
      <AccordionItem
        index={item.index}
        title={item.title}
        description={item.description}
      />
    );
  })
}
